<div class="m-5 items_page" style="text-align: center;">
  <div class="title" style="border-bottom: 5px solid #3d85c6;">
    <h1>Shopping Cart</h1>
  </div>

  <% if @items.length == 0 %>
    <div class="p-5 m-5">
      <h2>Shopping Cart is empty</h2>
    </div>
    <div class="p-3">
      <%= link_to "<Back To Menu", items_url(), style: "color: white;", class: "btn btn-success btn-green" %>
    </div>
  <% else %>

      <div class="mt-5">
        <% @items.each do |item| %>
          <div class="row">
            <div class="col-md-3">
              <div class="card" style="width: 18rem;">
                <%= image_tag "image.png" ,class: "card-img-top" %>
              </div>
            </div>
          </div>
          <h3>
            <%= item.name %> x 1
          </h3>
        <% end %>
      </div>

    <div class="m-5">
      <%= link_to "<Back To Menu", items_url(), style: "color: white;", class: "btn btn-success btn-green" %>
      <%= link_to "Checkout", thanks_users_url(), style: "color: white;", class: "btn btn-primary btn-officebreaks" %>
    </div>
  <% end %>
</div>