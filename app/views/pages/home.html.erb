
<% if user_signed_in? %>
  <div class="home-page" style="text-align: center;">
    <div class="home">
      <h1>HOME</h1>
    </div>
    <div class="">
      <%= image_tag ("menu.jpg"), style: "height: 45%; width: 45%;" %>
      <%= link_to "View Menu List", items_url(), class: "btn btn-primary btn-officebreaks home-image" %>
    </div>
  </div>
<% else %>
  <div class="m-5" style="text-align: center;">    
    <div class="wannabreak">
      <h1>Want to have a break?</h1>
