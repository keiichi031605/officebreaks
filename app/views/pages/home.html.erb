      <%= image_tag ("menu2.jpg"), style: "height: 45%; width: 45%;" %>
    </div>
    <div class="m-3">
        <%= link_to "Sign up", new_user_registration_path, style: "color:white;", class: "btn btn-success btn-green m-5" %>
